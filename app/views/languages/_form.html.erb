<%= form_for(@language) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :name, t(:name) %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :code %>
    <%= f.text_field :code, class:'form-control' %>
  </div>
<% end %>

