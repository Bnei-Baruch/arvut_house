<h1><%=t('.list_of_events') %></h1>

<table>
  <thead>
    <tr>
      <th><%=t(:name) %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.name %></td>
        <td><%= link_to t(:show), event_type %></td>
        <td><%= link_to t(:edit), edit_event_type_path(event_type) %></td>
        <td><%= link_to t(:delete), event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

