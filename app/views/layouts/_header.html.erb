<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "Haifa Arhut House", root_path, id: "logo", class:I18n.locale %>
      <nav class="inline_container">
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
	      <li><%= link_to "About",   about_path %></li>
	      <li><%= link_to "Contact", contact_us_path %></li>
          <li><%= link_to "Help", '#' %></li>
          <% if admin_user? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Modules <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
            	<li><%= link_to "People", people_path %></li>
            	<li><%= link_to "People (new)", new_person_path %></li>
                <li class="divider"></li>
                <li><%= link_to "Events", events_path %></li>
                <li><%= link_to "Event (new)", new_event_path %></li>
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_person_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
          <% end %>
          	<% if signed_in? %>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
          	<% else %>
            	<li><%= link_to "Sign in", signin_path %></li>
          	<% end %>
          <li>
          	<%= select_tag 'languages',  options_for_select(LANGUAGES, I18n.locale.to_s), 
          	onchange: 'this.form.submit()', class: 'languages' %>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
