            <li><%= link_to t(:log_id), signin_path %></li>
          <% end %>
          <li>
          	<%= form_tag loc_lang_path, :method => :post, class: 'locale' do %>          	
	          	<%= select_tag 'set_locale',  options_for_select(LANGUAGES, I18n.locale.to_s), 
	          	onchange: 'this.form.submit()', class: 'languages hide' %>
	          	<%= submit_tag 'submit' %>
	          	<%= javascript_tag "$('.locale input').hide()" %>
          	<% end %>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>
