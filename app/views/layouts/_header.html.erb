                <li><%= link_to t('roles.index.list'), roles_path %></li>
                <li><%= link_to t('payment_types.index.list'), payment_types_path %></li>
                <li><%= link_to t('payments.index.list'), payments_path %></li>
                <li><%= link_to t('departments.index.list'), departments_path %></li>
              </ul>
            </li>
