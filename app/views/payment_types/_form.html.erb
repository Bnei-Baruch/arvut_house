
<%= form_for(@payment_type) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :name, t(:name) %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :frequency %><br>
    <%= f.select :frequency, @payment_type.frequency_arr  %>
  </div>
  <div class="field">
    <%= f.label :amount %><br>
    <%= f.text_field :amount %>
  </div>
<% end %>



<%= form_for(@payment_type, 
  url:  payments_report_payment_type_path(@payment_type.id, format: "xlsx"),
  html: {method: "get"}) do |f| %>
  <div class="form-group">
    <label for="payment_date_start">Date From</label>
    <%= date_field_tag('payment_date_start', 
      (Date.today -  (Date.today.day-1) - ((Date.today.month-1).month)), 
      {:required => true}) %>
  </div>
  <!--Biginig of a month  (Date.today -  (Date.today.day-1)) -->
  <!- Biginig of a month before  (Date.today -  (Date.today.day-1) - 1.month)--->
  <div class="form-group">
    <label for="payment_date_end">Date To</label>
     <%= date_field_tag('payment_date_end', Date.today, {:required => true}) %>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
<% end %>
