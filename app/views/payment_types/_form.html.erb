<%= form_for(@payment_type) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  
  <div class="field">
    <%= f.label :name, t(:name) %>
    <%= f.text_field :name, class:'form-control' %>
  </div>
  <div class="field">
    <%= f.label :frequency %>
    <%= f.select :frequency, @payment_type.frequency_arr, {}, { class: 'form-control' }  %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount, class:'form-control' %>
  </div>
<% end %>