<% provide(:title, title) %>
<h1>
	<div class="header-title"><%= title %></div>
	<%= link_to index_path_name, index_path, class:"link_header btn" %>
	<%= link_to t(:new), new_path, class:"link_header btn" %>
	<%= link_to t(:save), '#', class:"link_header btn", id: "save_link_header"  %> 	 	
</h1>

<script type="text/javascript">
$(document).ready(function(){
    $('#save_link_header').click(function(){
        $('form').submit();
        return false;
    });
});
</script>