<%= form_for search, as: :f, method: :get, url: events_path, 
	html: {id: 'search-form', class: 'search-form'} do |search_form| %>
  <% field_set_tag do %>
  	<span class='search_span'>
	  <%= search_form.label :event_date_after, t(:date_after) %>
	  <%= date_field_tag('event_date_after', search.event_date_after, 
	  					{name:'f[event_date_after]', id:'f_event_date_after', class:'form-control search_field'})%>  
  	</span>
  	<span class='search_span'>
	  <%= search_form.label :event_date_before, t(:date_before) %>
	  <%= date_field_tag('event_date_before', search.event_date_before, 
	  					{name:'f[event_date_before]' , id:'event_date_before', class:'form-control search_field'})%>  		
  	</span>
  	<span class='search_span'>  												
	  	<%= search_form.label :event_type_id, t('activerecord.attributes.event.event_type_id') %>
	  	<%= search_form.select :event_type_id, EventType.all.map { |et| [et.name, et.id] }, {include_blank: true}, 
	  		{ class: 'form-control search_field long_search_select' } %>	
  	</span>
  	<span class='search_span'> 	  
  	  <%= search_form.label :description, t('activerecord.attributes.event.description') %>
	  <%= search_form.search_field :description, class:'form-control search_field long_search_input' %> 		
  	</span>
  	<span class='search_span'>  												
	  	<%= search_form.label :sort_params_for, t(:sort_by) %>
	  	<%= search_form.select :sort, search.sort_params_arr,  {include_blank: false},
	  		{ class: 'form-control search_field long_search_select' } %>		
  	</span>
  <% end %>
<% end %>	