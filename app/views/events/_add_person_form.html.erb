<%= form_for(event.person_event_relationships.build(person_id: person.id), 
		remote: true) do |f| %>
  <div>
  	<%= f.hidden_field :person_id %>
  	<%= f.hidden_field :event_id %>
  </div>
  <%= f.submit t(:add), class: "btn btn-primary btn-small  btn-medium", 
  		id: "add_person_btn" %>
<% end %>	  	