<% provide(:title, t('.new')) %>
<h1>
	<span class="header-title"><%=t('.new') %></span>
	<%= link_to t('people.index.list'), people_path, class:"link_header btn" %>	
</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@person) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name, t(:name) %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit t(:save), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>