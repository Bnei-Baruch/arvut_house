<%= form_for(person.person_departments.find_by(department_id: department.id),
     html: { method: :delete }, remote: true) do |f| %>
     <div>
	  	<%= f.hidden_field :person_id %>
	  	<%= f.hidden_field :department_id %>
	  </div>
  <%= f.submit t(:remove), class: "btn btn-ss-size", id: "remove_item_btn",
  data: { confirm: 'Are you sure?' } %>
<% end %>