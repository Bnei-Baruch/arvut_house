<%= form_for search, as: :f, method: :get, url: people_path, html: {id: 'search-form'} do |search_form| %>
  <% field_set_tag do %>
  	<span class='search_span'>
	  <%= search_form.label :name, t(:name) %>
	  <%= search_form.search_field :name, class:'search_field' %>  		
  	</span>
  	<span class='search_span'> 	  
  	  <%= search_form.label :family_name, t('activerecord.attributes.person.family_name') %>
	  <%= search_form.search_field :family_name, class:'search_field' %> 		
  	</span>
  	<span class='search_span'>  												
	  	<%= search_form.label :gender, t('activerecord.attributes.person.gender') %>
	  	<%= search_form.select :gender, Person.gender_arr, {}, 
	  		{ class: 'search_field' } %>	
  	</span>
  	<span class='search_span'>  												
	  	<%= search_form.label :status_id, t('activerecord.attributes.person.status_id') %>
	  	<%= search_form.select :status_id, Status.all.map { |stat| [stat.name, stat.id] }, {include_blank: true}, 
	  		{ class: 'search_field' } %>	
  	</span>
  	<span class='search_span'>  												
	  	<%= search_form.label :sort_params_for, t(:sort_by) %>
	  	<%= search_form.select :sort, search.sort_params_arr,  {include_blank: true},
	  		{ class: 'search_field long' } %>		
  	</span>
  	<!-- <span class='search_span'>
	  <%= search_form.submit t(:search), id:'sf_btn_search'%>  		
  	</span>
  	<span class='search_span'>
	  <%= button_to_function t(:clear), "reset_search_elements()", id:'sf_btn_clear' %>  		
  	</span> -->
  <% end %>
<% end %>	