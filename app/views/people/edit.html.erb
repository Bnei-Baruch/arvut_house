<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a><%= t(:main) %></a></li>
  <li><%= link_to t('languages.name'), languages_person_path(@person) %></li>
  <li><%= link_to t('roles.name'), roles_person_path(@person) %></li>
</ul>

<%= render partial: 'shared/header_edit', locals:{ title: t('.editing'), 
	new_path: new_person_path, cur_item: @person,
	index_path_name: t('people.index.list'), index_path: people_path} %>

<%= form_for(@person, :html => {:autocomplete => "off"}) do |f| %>	
	<div class="row">
	  	<%= render 'shared/error_messages', object: f.object %>
		<table>
			<tr>
				<td>					
				  	<%= f.label :name, t(:name) %>
				  	<%= f.text_field :name %>
				  	
				  	<%= f.label :family_name %>
				  	<%= f.text_field :family_name %>
				
				  	<%= f.label :email %>
				  	<%= f.text_field :email, :autocomplete => :off %>
				
				  	<%= f.label :email_2 %>
				  	<%= f.text_field :email_2, :autocomplete => :off %>
				
				  	<%= f.label :password %>
				  	<%= f.password_field :password, :autocomplete => :off, value:'' %>
				
				  	<%= f.label :password_confirmation %>
				  	<%= f.password_field :password_confirmation %>
				  	<br>
				  	<% if admin_user? %>
					  	<%= f.check_box :admin, class:"input_checkbox" %>
					  	<%= f.label :admin, class: "label_checkbox" %>
				  	<% end %>
				</td>
				<td>										
				  	<%= f.label :gender %>
				  	<%= f.select :gender, @person.gender_arr %>	
				  						
				  	<%= f.label :status_id %>
				  	<%= f.select :status_id, @person.statuses_array %>	
				  					
				  	<%= f.label :phone_mob %>
				  	<%= f.telephone_field :phone_mob %>
				  					  								
				  	<%= f.label :phone_additional %>
	  				<%= f.text_field :phone_additional %>	
	  										
				  	<%= f.label :id_card_number %>
				  	<%= f.text_field :id_card_number %>	
				  			
				</td>
				<td>
					<table>
						<tr>
							<td>							
							  	<%= f.label :birth_date %>
							  	<%= f.date_field :birth_date %>	
							  								
							  	<%= f.label :family_status %>
							  	<%= f.select :family_status, @person.family_status_arr  %>	
							  								
							  	<%= f.label :car_owner %>
							  	<%= f.select :car_owner, @person.car_owner_arr %>	
							  	
							  	<%= f.label :car_number %>
							  	<%= f.text_field :car_number, :autocomplete => :off %>
							  								
							  	<%= f.label :computer_knowledge %>
				  				<%= f.select :computer_knowledge, @person.computer_knowledge_arr %>				  													
							</td>
							<td>							
							  	<%= f.label :workplace %>
							  	<%= f.text_field :workplace %>	
							  								
							  	<%= f.label :skills %>
							  	<%= f.text_field :skills %>	
							  								
							  	<%= f.label :department %>
							  	<%= f.text_field :department %>
							  								
							  	<%= f.label :area %>
							  	<%= f.text_field :area %>								
							</td>
						</tr>
						<tr>
							<td colspan="2">
							  	<%= f.label :address %>
							  	<%= f.text_area :address, class:"text_area_address" %>								
							</td>
						</tr>
					</table>				  	
				</td>
			</tr>
		</table>
	</div>
      <%= f.submit "Save changes", class: "btn btn-primary display_none",
      		id:'btn_submit' %>
<% end %>
<% if @person.email.present?%>
	<%= gravatar_for @person %>
<% end %>
<a href="http://gravatar.com/emails">change</a>